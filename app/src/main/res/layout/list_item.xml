<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/lblItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="20sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:text="First Name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:text="Last Name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:text="Email"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:text="Company Name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblZip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:text="Zip"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:text="State"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15px"
            android:text="City"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblBoxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boxes"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblOrderTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Time"
        android:textAlignment="textEnd"
        android:textColor="#5E5E5E"
        android:textSize="12sp" />

</LinearLayout>