<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/layout_padding">

            <TextView
                style="@style/heading_h2"
                android:text="@string/main_heading" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TableRow
                    android:layout_marginTop="10dp">
                    <LinearLayout>
                        <TextView
                            style="@style/heading_sub"
                            android:layout_width="wrap_content"
                            android:text="@string/sub_info" />
                    </LinearLayout>

                    <TextView
                        style="@style/heading_sub"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="042 357 8579"
                        android:textColor="#FF5722" />
                </TableRow>
                <TextView
                    style="@style/heading_sub"
                    android:text="to complete your order!" />
                <TableRow>

                </TableRow>
            </TableLayout>

            <TextView
                style="@style/heading_4_bold"
                android:text="Select Item(s)"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/colPaper"
                        style="@style/button_img">

                    <ImageView
                            android:id="@+id/imgPaper"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/ic_paper" />

                        <TextView
                            android:id="@+id/lblPaper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Papers" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/colStationary"
                        style="@style/button_img"
                        android:layout_marginRight="0dp">

                        <ImageView
                            android:id="@+id/imgStationary"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/ic_statitionaries"
                            />

                        <TextView
                            android:id="@+id/lblStationary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Other Stattionaries" />
                    </LinearLayout>



                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/colDisk"
                        style="@style/button_img">

                        <ImageView
                            android:id="@+id/imgDisk"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/ic_disk" />

                        <TextView
                            android:id="@+id/lblDisk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Hard Drive" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/colWaste"
                        style="@style/button_img"
                        android:layout_marginRight="0dp">

                        <ImageView
                            android:id="@+id/imgWaste"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/ic_waste" />

                        <TextView
                            android:id="@+id/lblWaste"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Other Waste Material" />
                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <Button
                style="@style/button_next"
                android:id="@+id/home_btn_next"
                android:layout_marginTop="25dp"
                android:text="@string/button_next"/>

        </LinearLayout>

    </ScrollView>
